<div class="bg-whitesmoke">
    <article class="snor-content">
        <div class="row bg-white p-3">
            <section class="col-8 my-auto">
                <div class="box p-1">
                    <img src="{{data.img}}" alt="imagen" id="img-big" data-toggle="modal" data-target="#modalPictures">
                </div>
                <hr class="mt-3 mb-0 snor-b3">
                <div class="snor-img-line p-2 row row-cols-md-5">
                    {{#each images}}
                        {{#if show}}
                            <div class="col p-2">
                                <div class="box p-1">
                                    <img src="{{url}}" class="snor-img-small" alt="{{name}}" name="{{name}}" onmouseover="TurnImg(this)">
                                </div>
                            </div>
                        {{/if}}
                    {{/each}}
                    <div class="col p-2">
                        <div class="box p-1">
                            <img src="../../assets/plusImg.jpg" class="snor-img-small" alt="Ver más" data-toggle="modal" data-target="#modalPictures">
                        </div>
                    </div>
                </div>
            </section>
            <aside class="col-4 my-auto">
                <div class="snor-specs mx-auto">
                    <h3 class="my-3">{{data.brand}} {{data.model}}</h3> 
                    <div class="snor-band bg-green"></div>
                    <div class="snor-price text-center" id="data_price">${{data.price}}</div>
                    <div class="snor-line"></div>
                    <div class="snor-char">
                        <table class="table">
                            <tr>
                                <th>Marca:</th>
                                <td>{{data.brand}}</td>
                            </tr>
                            <tr>
                                <th>Modelo:</th>
                                <td>{{data.model}}</td>
                            </tr>
                            <tr>
                                <th>HP:</th>
                                <td>{{data.hp}}hp</td>
                            </tr>
                            <tr>
                                <th>Motor:</th>
                                <td>{{data.cc}}cc</td>
                            </tr>
                            <tr>
                                <th>Año:</th>
                                <td id="data_year">{{data.year}}</td>
                            </tr>
                            <tr>
                                <th>Longitud:</th>
                                <td>{{data.width}}cm</td>
                            </tr>
                            <tr>
                                <th>Altura:</th>
                                <td>{{data.height}}cm</td>
                            </tr>
                            <tr>
                                <th>Peso:</th>
                                <td>{{data.weight}}kg</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="text-center" id="contactButton">
                    {{#if admin}}
                    <button class="snor-btn" onclick="editVehicle('{{data.id}}')">
                        Editar
                    </button>
                    {{else}}
                    <button class="snor-btn" data-toggle="modal" data-target="#modalContact">
                        Contactar
                    </button>
                    {{/if}}
                </div>
            </aside>
            <hr class="mt-3 mb-0 snor-b3">
            <section class="vehicle-data">

                <div id="description" class="hidden">
                    {{data.description}}
                </div>
                <div id="descripcion" class="p-5 text-center">
                    {{data.descripcion}}
                </div>

                <div class="text-center">
                    <iframe width="70%" height="400" src="https://www.youtube.com/embed/{{data.video}}" 
                        title="YouTube video player" frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                    </iframe>
                </div>
            </section>
        </div>
    </article>



